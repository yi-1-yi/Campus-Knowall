<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/other_top_navigation">

        <ImageView
            android:src="@drawable/return_icon"
            android:id="@+id/back"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:tint="#000" />

        <TextView
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="密码修改"
            android:id="@+id/rec"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_fans_likes"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:text="用户名："
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/na"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapr_modify"
                android:lines="1"
                android:hint="请输入用户名" />

        </LinearLayout>

        <LinearLayout

            android:background="?selectableItemBackground"
            android:id="@+id/mypush"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:text="原密码："
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/pw"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapr_modify"
                android:lines="1"
                android:hint="请输入原始密码" />

        </LinearLayout>

        <LinearLayout

            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:text="新密码："
                android:layout_width="100dp"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/npw"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapr_modify"
                android:lines="1"
                android:hint="请输入修改密码" />

        </LinearLayout>

        <LinearLayout

            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:text="新密码："
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/npw2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapr_modify"
                android:lines="1"
                android:hint="请再次输入修改密码" />

        </LinearLayout>


        <Button
            android:id="@+id/epw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_button"
            android:text="确认修改"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>